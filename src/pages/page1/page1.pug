ion-header
	ion-navbar(color="primary")
		button(ion-button="",menuToggle="")
			ion-icon(name="menu")
		ion-title Map
		ion-buttons(end="")
			button(ion-button="", full="", color="danger", (click)="disconnect()", icon-left="", *ngIf="bt.device")
				ion-icon(name="power")
				| Disconnect
ion-content
	ion-card(padding *ngIf="!bt.device")
		ion-card-header Syrus Devices
		ion-list
			button(ion-item="", (click)="connect(device)", *ngFor="let device of devices")
				| {{ device.name }}
	div#map(style="width:100%; height:500px; z-index:0")
		ion-fab(bottom="" right="")
			button(ion-fab="", [color]="follow ? 'primary': 'light'", (click)="follow=!follow", mini="")
				ion-icon(name="locate")
ion-footer(*ngIf="!bt.device")
	ion-toolbar
		button(ion-button="", (click)="scan()", full="", icon-left="")
			ion-icon(name="search")
			| {{ 'Scan'  | translate }}
